<h3>@<%= current_user.username  %>'s Feed</h3>
<h5>See what your "friends" are saying about you!</h5>

	<%= render 'epicenter/newtweet' %>



<% @following_tweets.each do |tweet| %>
	
	<div class="card ">
	  
	  <div class="card-body">
	    <h6 class="card-title"><%= image_tag tweet.user.avatar.thumb %> <%= link_to tweet.user.name, show_user_path(id: tweet.user_id) %>  @<%= tweet.user.username %> â€¢ <%= time_ago_in_words(tweet.created_at) if Time.now - tweet.created_at < 86400 %> <%= tweet.created_at.strftime('%b%e') if Time.now - tweet.created_at > 86400 %> </h6>
	    <p class="card-text"><%= tweet.message.html_safe %></p>
	  </div>
	</div>
<% end %>