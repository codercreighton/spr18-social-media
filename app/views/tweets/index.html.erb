<p id="notice"><%= notice %></p>

<h3>What everyone is saying...</h3>

<% @tweets.each do |tweet| %>
  
  <div class="card">
    
    <div class="card-body">
      <h6 class="card-title"><%= image_tag tweet.user.avatar.thumb %> ~ about <%= time_ago_in_words(tweet.created_at) %> ago, <%= link_to tweet.user.username, show_user_path(id: tweet.user_id) %> said...</h6>
      <p class="card-text"><%= tweet.message.html_safe %></p>
      <p><%= link_to 'Show', tweet %> <% if current_user.id == tweet.user_id %>| <%= link_to 'Edit', edit_tweet_path(tweet) %> | <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></p>
    </div>
  </div>

 <% end %>
  

<br>

<%= link_to 'New Tweet', new_tweet_path %>

